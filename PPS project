#include<stdio.h>
#include<stdlib.h>
int main()
{
    printf("                                          **********************\n");
    printf("                                          *  Result Generator  *\n");
    printf("                                          **********************\n");
    printf("                        ------------------------------------------------------------\n");
    printf("                        |  1.Show the marks against all subjects       [Press-1]    |\n");
    printf("                        |  2.Show the students ID and the grade        [Press-2]    |\n");
    printf("                        |  3.Show all merit position                   [Press-3]    |\n");
    printf("                        |  4.Show how much students got which grade    [Press-4]    |\n");
    printf("                        |                                                           |\n");
    printf("                        ------------------------------------------------------------\n");
    int press;
    presss:
    scanf("%d",&press);
    if(press==1){
        printf("Enter Your Marks :\n");
        printf("to continue press 1 to 4\n");
        printf("press 0 to exit \n");
    }
    if(press==2){
        printf("ID\n");
         printf("to continue press 1 to 4\n");
        printf("press 0 to exit \n");
    }

    if(press==3){
        printf("REsult\n");
         printf("to continue press 1 to 4\n");
        printf("press 0 to exit \n");
    }

    if(press==4){
        printf("Merit\n");
         printf("to continue press 1 to 4\n");
        printf("press 0 to exit \n");
    }
    if(press==0){
        exit(0);
    }
    goto presss;

   return 0;

}
